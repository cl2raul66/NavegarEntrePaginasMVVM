<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PaginasMVVM.Vistas.Principal"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:PaginasMVVM.VistasModelo"
    Title="Principal"
    x:DataType="vm:PrincipalVistaModelo">

    <!--<ContentPage.BindingContext>
        <vm:PrincipalVistaModelo/>
    </ContentPage.BindingContext>-->

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding AjustesClick}"
            Order="Primary"
            Text="Ajustes" />
        <ToolbarItem
            Command="{Binding Operacion1Click}"
            Order="Secondary"
            Text="Operación 1" />
        <ToolbarItem
            Command="{Binding Operacion2Click}"
            Order="Secondary"
            Text="Operación 2" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="Welcome to Principal!"
                VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>